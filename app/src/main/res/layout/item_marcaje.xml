<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/dark_gray"
            android:contentDescription="imagen del marcaje"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />-->

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/gray_claro"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dp"
            android:text="Fecha del marcaje"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbFavorite"
            android:layout_width="39dp"
            android:layout_height="29dp"
            android:button="@drawable/states_cb_favorite"
            android:buttonTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/tvMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matricula"
            android:layout_marginTop="65dp"
            android:maxLength="7"
            android:textAllCaps="true"
            android:drawableStart="@drawable/ic_baseline_directions_car_24"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="41dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tvTipoActividadListado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Actividad"
            android:drawableStart="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_marginTop="5dp"
            android:textAllCaps="true"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="6dp"
            android:layout_marginLeft="15dp"/>


            <TextView
                android:id="@+id/tvTipoObra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Obra"
                android:drawableStart="@drawable/ic_baseline_construction_24"
                android:textAllCaps="true"
                android:layout_marginTop="35dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="6dp"
                android:layout_marginLeft="15dp"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>